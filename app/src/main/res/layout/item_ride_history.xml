<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:elevation="4dp">

    <TextView
        android:id="@+id/txt_history_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ride Type: Offer"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:id="@+id/txt_history_from_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UGA Library â†’ Atlanta Airport"
        android:textSize="16sp"
        android:layout_marginTop="6dp" />

    <TextView
        android:id="@+id/txt_history_datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date/Time: 2025-04-22 5:00 PM"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/txt_history_rider_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rider: Jane Doe"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txt_history_rider_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: jane@example.com" />

    <TextView
        android:id="@+id/txt_history_driver_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Driver: John Smith"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/txt_history_driver_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email: john@example.com" />

</LinearLayout>
